<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Cadu</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main class="container-fluid">

      <section id="messages" class="row">
        <%= content_tag(:div, flash[:error], :id => "flash_error", class: "alert alert-danger col-md-8 col-md-offset-2") if flash[:error] %>
        <%= content_tag(:div, flash[:notice], :id => "flash_notice", class: "alert alert-info col-md-8 col-md-offset-2") if flash[:notice] %>
        <%= content_tag(:div, flash[:alert], :id => "flash_alert", class: "alert alert-warning col-md-8 col-md-offset-2") if flash[:alert] %>
        <%= content_tag(:div, flash[:message], :id => "flash_message", class: "alert alert-success col-md-8 col-md-offset-2") if flash[:message] %>
      </section>

      <%= yield %>

    </main>
  </body>
</html>
