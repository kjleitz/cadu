<%= form_for comment, url: task_comments_path do |f| %>
  <article class="card comment-card">
    <%= f.hidden_field :task_id %>
    <%= f.hidden_field :author_id, current_user.id %>
    <div class="card-header">
      <span class="card-subtitle float-right"><em class="text-muted"><%= comment.human_created_at %></em></span>
      <h6 class="card-title"><strong><%= comment.author.name %></strong> <span class="text-muted">wrote:</span></h6>
    </div>
    <div class="card-block">
      <div class="row">
        <div class="comment-image col-md-2">
          <img src="https://placehold.it/75x75" alt="<%= comment.author.name %>">
        </div>
        <div class="comment-content col-md-10">
          <%= f.text_area :content, placeholder: "Write your comment here...", class: "new-task-content", rows: 3 %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= f.submit class: "btn btn-primary float-right" %>
    </div>
  </article>
<% end %>
