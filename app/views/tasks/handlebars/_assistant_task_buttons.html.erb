<a class="btn btn-warning float-right" href="/users/{{task.client.id}}/reminders/new?task_id={{task.id}}">Remind Client</a>
{{#if task.requested}}
  <%= form_tag '#', data: { action: "accept" }, method: :post, class: "button_to task-action" do %>
    <%= submit_tag "Accept Task", class: "btn btn-primary float-right" %>
  <% end %>
{{else if task.accepted}}
  <%= form_tag '#', data: { action: "start" }, method: :post, class: "button_to task-action" do %>
    <%= submit_tag "Begin Work", class: "btn btn-info float-right" %>
  <% end %>
{{else if task.in_progress}}
  <%= form_tag '#', data: { action: "mark_complete" }, method: :post, class: "button_to task-action" do %>
    <%= submit_tag "Mark Complete", class: "btn btn-success float-right" %>
  <% end %>
{{/if}}
