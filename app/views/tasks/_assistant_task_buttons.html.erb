<%= link_to "Remind Client", new_user_reminder_path(task.client, task_id: task.id), class: "btn btn-warning float-right" %>
<% if task.requested? %>
  <%= button_to "Accept Task", task_accept_path(task), class: "btn btn-primary float-right" %>
<% elsif task.accepted? %>
  <%= button_to "Begin Work", task_start_path(task), class: "btn btn-info request-floater" %>
<% elsif task.in_progress? %>
  <%= button_to "Mark Complete", task_complete_path(task), class: "btn btn-success float-right" %>
<% end %>
