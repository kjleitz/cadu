<%= link_to "Remind Client", new_user_reminder_path(task.client), class: "btn btn-warning float-right" %>
<% if task.requested? %>
  <%= button_to "Accept Task", accept_task_path(task), class: "btn btn-primary float-right" %>
<% elsif task.accepted? %>
  <%= button_to "Begin Work", start_task_path(task), class: "btn btn-info request-floater" %>
<% elsif task.in_progress? %>
  <%= button_to "Mark Complete", complete_task_path(task), class: "btn btn-success float-right" %>
<% end %>
