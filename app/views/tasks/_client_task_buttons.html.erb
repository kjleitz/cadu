<% if task.completed? %>
  <%= button_to "Remove Completed Task", task_path(task), method: :delete, class: "btn btn-danger float-right" %>
<% else %>
  <%= button_to "Mark Complete", task_complete_path(task), class: "btn btn-success float-right" %>
  <%= button_to "Request Assistance", task_request_assistance_path(task), class: "btn btn-primary request-floater" if task.idle? %>
<% end %>
