<h3 id="notifications-header" class="text-center">Notifications</h3>

<ul class="nav nav-sidebar">
  <% notifications.each do |notification| %>
    <%= link_to content_tag(:li, notification.content, class: "notification-item #{notification.status} task-#{notification.task.status}"), task_path(notification.task), class: "notification-link" %>
  <% end %>
</ul>
