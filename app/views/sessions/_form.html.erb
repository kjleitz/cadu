<%= form_for user, url: login_path, class: "form-horizontal" do |f| %>
  <div class="field form-group">
    <%= f.label :email %>
    <%= f.text_field :email, required: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <%= f.password_field :password, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <br><%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<p>...or:</p>

<%= link_to "Log in with Facebook", "/auth/facebook", class:"btn btn-info" %>
